@model XayDungMinhThanh.Models.Post
@{
    ViewBag.Title = ViewBag.title;
}

<input type="hidden" value="@Model.id" id="idPost" />
<div ng-controller="showNewsController">
    <div>
        <!--Banner-->
        <div id="pageHeaderContent">
            <span us-spinner="{radius:15, width:4, length: 8}"></span>
            <div id="myCarousel" class="carousel slide">
                <div class="carousel-inner">
                    <div class="item active">
                        <div class="fill-main" style="background-image:url({{categoryPost.imageBanner}});"></div>
                        <div class="carousel-caption page-caption">
                            <div style="display:table-row;">
                                <div class="page-caption-panel">
                                    <h1 class="pageTitle">{{post.title}}</h1>
                                </div>
                            </div>
                            <div style="display:table-row;">
                                <div class="page-caption-panel">
                                    <h4>{{post.description}}</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <ol class="breadcrumb">
                            <li><a href="/" title="Trang chủ">Trang chủ</a></li>
                            <li><a href="/tin-tuc" title="Tin tức">Tin tức</a></li>
                            <li><a href="/tin-tuc/{{post.alias}}-{{post.id}}" title="{{post.title}}">{{post.title}}</a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Content-->
    <div class="section mainsection" style="margin-bottom: 50px">
        <div class="container">
            <div class="row">
                <div class="col-md-8 newsHeader">

                    <div class="row newArticleSocial">
                        <div class="col-md-6">
                            <h5>
                                <span class="pull-left articleStartDate">{{post.timePublished | date:'dd-MM-yyyy'}}</span>
                                <div class="pull-left categories"></div>
                            </h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <h1>{{post.title}}</h1>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="ms-rtestate-field" style="display:inline">
                                <div ng-bind-html="post.content"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <h1 style="padding-left: 15px; padding-top: 0px; margin-top: 0px;">
                        <div>
                            <div>
                                <span>Giới thiệu khác</span>
                            </div>
                        </div>
                    </h1>
                    <div>
                        <div class="display-querylistitems">
                            <div class="row" ng-show="lastPosts.length > 0">
                                <div class="col-md-12">
                                    <div ng-repeat="(index, value) in lastPosts">
                                        <div class="row margin-bottom-lg">
                                            <div class="col-md-12 news">
                                                <div style="border-bottom: 1px solid #f5f5f5">
                                                    <div style="padding: 5px 15px;">
                                                        <h5 style="margin-bottom:15px;">
                                                            <div>
                                                                <span class="pull-left articleStartDate">{{value.timePublished | date:'dd-MM-yyyy'}}</span>
                                                                <div class="pull-left categories"></div>
                                                            </div>
                                                        </h5>
                                                        <h3><a href="/tin-tuc/{{value.alias}}-{{value.id}}" title="{{value.title}}">{{value.title}}</a></h3>
                                                        <div style="margin-top: 10px;"><span>{{value.description}}</span></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row" ng-show="lastPosts.length == 0">
                                <div class="col-md-12" style="margin: 20px; font-size: 20px">
                                    <em>Bài viết không có sẵn</em>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div>
                                <a href="/tin-tuc" style="color:#46402d" title="Tin tức">
                                    <div style="margin-top: -5px; margin-right: 10px;" class="icon-expand icon-dim"></div>
                                    <div><span>Xem thêm</span></div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>