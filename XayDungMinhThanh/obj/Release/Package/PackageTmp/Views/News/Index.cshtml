<div ng-controller="newsController">
    <!--Banner-->
    <div id="pageHeaderContent">
        <div id="myCarousel" class="carousel slide">
            <div class="carousel-inner">
                <div class="item active">
                    <div class="fill-main" style="background-image:url({{categoryPost.imageBanner}});"></div>
                    <div class="carousel-caption page-caption">
                        <div style="display:table-row;">
                            <div class="page-caption-panel">
                                <h1 class="pageTitle">{{categoryPost.title}}</h1>
                            </div>
                        </div>
                        <div style="display:table-row;">
                            <div class="page-caption-panel">
                                <h4>{{categoryPost.description}}</h4>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
        <!--Breadcrumb-->
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <ol class="breadcrumb">
                        <li><a href="/" title="Trang chủ">Trang chủ</a></li>
                        <li><a href="/tin-tuc" title="Tin tức">Tin tức</a></li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!--Content-->
    <div class="section mainsection">
        <div class="container">
            <span us-spinner="{radius:15, width:4, length: 8}"></span>
            <div class="row">
                <div class="col-lg-12">
                    <div class="ms-webpart-zone ms-fullWidth">
                        <div class="s4-wpcell-plain ms-webpartzone-cell ms-webpart-cell-vertical ms-fullWidth ">
                            <div class="ms-webpart-chrome ms-webpart-chrome-vertical ms-webpart-chrome-fullWidth ">
                                <div width="100%" class="ms-WPBody noindex " allowdelete="false" allowexport="false" style="">
                                    <div>
                                        <div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div>
                                                        <div class="row margin-bottom-lg">
                                                            <div class="col-sm-4 col-md-4 col-lg-4 news" style="margin-bottom: 20px" ng-repeat="(index, value) in posts">
                                                                <div style="border: 1px solid #f5f5f5">
                                                                    <div class="fill" title="{{value.title}}" style="background-image:url({{value.image}});min-height: 180px !important; cursor:pointer; text-align:center;"></div>
                                                                    <div style="padding: 15px;">
                                                                        @*<h5>
                                                                            <div>
                                                                                <span class="pull-left articleStartDate">{{value.timePublished | date:'dd-MM-yyyy'}}</span>
                                                                                <div class="pull-left categories"></div>
                                                                            </div>
                                                                        </h5>*@
                                                                        <h3><a href="tin-tuc/{{value.alias}}-{{value.id}}" title="{{value.title}}">{{value.title}}</a></h3>
                                                                        <p>{{value.description}}</p>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div><div class="ms-clear"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>