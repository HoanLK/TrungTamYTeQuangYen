
@{
    ViewBag.Title = "Danh sách video";
}

<div class="insurance" id="tin-tuc" ng-controller="videoController" style="padding-bottom:0;">
    <div class="container">
        <h6>Danh sách video</h6>
        <div class="main">
            <div class="gallery-bottom">
                <div class="grid">
                    <div class="row" style="margin-bottom:1em;">
                        <p ng-hide="videos.length > 0" style="text-align:center; font-size:2em; color:#f44336">Đang cập nhật</p>
                        <div class="col-md-4 col-sm-6 col-xs-6 col-min-12 g-left" ng-repeat="(index, value) in videos" ng-show="videos.length > 0">
                            @*{{value.description}}*@
                            <iframe width="100%" height="100%" src={{value.link}} frameborder="0" allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>