
@{
    ViewBag.Title = "Quản lý Banner";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div ng-controller="bannerController">
    <!--Header Section-->
    <div class="section-header">
        <ol class="breadcrumb">
            <li class="active text-uppercase">Quản lý Banner</li>
        </ol>
    </div>

    <!--Body-->
    <div class="section-body">
        @*<input type="hidden" value="@WebSecurity.CurrentUserName" id="user" />*@
        <div class="row">

        </div>
        <hr class="ruler-lg" />

        <div class="card">
            <div class="card-body">
                @*<span us-spinner="{radius:15, width:4, length: 8}"></span>*@
                <!--Category Post-->
                <div class="col-md-12 col-sm-12 col-xs-12" id="post">
                    <div id="gridContainer" dx-data-grid="gridBanners"  dx-item-alias="banner">
                        <div data-options="dxTemplate:{ name:'cellTemplateImage' }">
                            <img ng-src="{{banner.value}}" style="height: 200px" />
                        </div>
                    </div>
                    <div dx-context-menu="contextMenuBanner"></div>
                </div>

                <!--Popup Delete-->
                <div class="popup" dx-popup="popupDeleteBanner">
                    <div data-options="dxTemplate: { name:'templateDeleteBanner' }">
                        <div style="text-align: center">{{titleDeleteBanner}}</div>
                        <br />
                        <div dx-button="{ text: 'Có', icon: 'floppy', onClick: ConfirmDeleteBanner, type: 'success' }"></div>
                        <div dx-button="{ text: 'Không', icon: 'clear', onClick: CancelDeleteBanner, type: 'danger' }"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




