                    <span us-spinner="{radius:15, width:4, length: 8}"></span>
                    <div class="row">
                        <div class="col-md-7">
                            <div class="form-group  " ng-class="{'has-error':!GiaDV.hoTen, 'has-success':GiaDV.hoTen}">
                                <input type="text" class="form-control" id="hoTen" name="hoTen" ng-model="GiaDV.hoTen" ng-change="GenAlias()">
                                <label for="hoTen">Họ tên *</label>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <input type="text" class="form-control" id="alias" ng-model="GiaDV.alias" name="alias" readonly>
                                <label for="alias">Alias</label>
                            </div>
                        </div>
                    </div>
                </form>*@

                <div class="row">
                    <div class="card-head">
                        <ul class="nav nav-tabs" data-toggle="tabs">
                            <li class="active"><a href="#noidung">Nội dung</a></li>
                        </ul>
                    </div>
                    <div class="card-body tab-content">
                        <div class="tab-pane active" id="noidung">
                            <div class="row">
                                <div class="col-md-9">
                                    <form class="form" role="form">
                                        <div class="form-group ">
                                            <input name="diaChi" id="diaChi" class="form-control" placeholder="" maxlength="12" ng-model="GiaDV.MaDV" />
                                            <label for="diaChi">Mã dịch vụ</label>
                                        </div>
                                        <div class="form-group ">
                                            <input name="ngaySinh" id="ngaySinh" class="form-control" placeholder="" maxlength="200" ng-model="GiaDV.TenDV" />
                                            <label for="ngaySinh">Tên dịch vụ</label>
                                        </div>
                                    </form>
                                </div>

                                <div class="col-md-3">
                                    <form class="form" role="form">
                                        <div class="form-group ">
                                            <input name="GiaBaoHiem" id="GiaBaoHiem" class="form-control" type="number" placeholder="" ng-model="GiaDV.GiaBaoHiem" />
                                            <label for="GiaBaoHiem">Giá bảo hiểm:</label>
                                        </div>
                                        <div class="form-group ">
                                            <input name="GiaVienPhi" id="GiaVienPhi" class="form-control" placeholder="" ng-model="GiaDV.GiaVienPhi" />
                                            <label for="GiaVienPhi">Giá viện phí:</label>
                                        </div>
                                        <div class="form-group ">
                                            <input name="GiaYeuCau" id="GiaYeuCau" class="form-control" placeholder="" ng-model="GiaDV.GiaYeuCau" />
                                            <label for="GiaYeuCau">Giá yêu cầu:</label>
                                        </div>
                                    </form>
                                </div>
