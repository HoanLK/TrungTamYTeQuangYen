<div ng-controller="introController">
    <div id="pageHeaderContent">
        <!-- BANNER -->
        <div id="myCarousel" class="carousel slide">
            <!-- IMAGE -->
            <div class="carousel-inner">
                <div class="item active">
                    <div class="fill-main" style="background-image:url({{categoryPost.imageBanner}});"></div>
                    <div class="carousel-caption page-caption">
                        <div style="display:table-row;">
                            <div class="page-caption-panel">
                                <h1 class="pageTitle">{{categoryPost.title}}</h1>
                            </div>
                        </div>
                        <div style="display:table-row;">
                            <div class="page-caption-panel">
                                <h4>{{categoryPost.description}}</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--BREADCRUMB-->
        <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <ol class="breadcrumb">
                            <li><a href="/"  title="Trang chủ">Trang chủ</a></li>
                            <li><a href="/gioi-thieu" title="Giới thiệu">Giới thiệu</a></li>
                        </ol>
                    </div>
                </div>
            </div>
    </div>
    <div class="section mainsection" style="margin-top: 20px">
        <div class="container">
            <span us-spinner="{radius:15, width:4, length: 8}"></span>
            <div ng-bind-html="post.content"></div>
        </div>
    </div>
</div>