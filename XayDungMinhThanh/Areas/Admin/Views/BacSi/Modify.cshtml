
@{
    ViewBag.Title = "Thêm bác sĩ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div ng-controller="modifyBacSiController">
    <!--Header Section-->
    <div class="section-header">
        <ol class="breadcrumb">
            <li class="active text-uppercase" style="width: 100%">
                <div class="col-md-4">
                    Thêm bài viết
                </div>
                <div class="col-md-8">
                    <div class="col-md-3">
                        <button type="button" class="btn btn-block btn-sm ink-reaction btn-success" ng-click="Save()"><span class="fa fa-edit"></span> Lưu</button>
                    </div>
                    <div class="col-md-3">
                        <button type="button" class="btn btn-block btn-sm ink-reaction btn-info" ng-click="SaveAndExit()"><span class="fa fa-check-square-o"></span> Lưu & Thoát</button>
                    </div>
                    <div class="col-md-3">
                        <button type="button" class="btn btn-block btn-sm ink-reaction btn-info" ng-click="SaveAndAdd()"><span class="fa fa-plus"></span> Lưu & Thêm mới</button>
                    </div>
                    <div class="col-md-3">
                        <button type="button" class="btn btn-block btn-sm ink-reaction btn-danger" ng-click="Cancel()"><span class="fa fa-remove"></span> Hủy bỏ</button>
                    </div>
                </div>
            </li>
        </ol>
    </div>

    <!--Body-->
    <div class="section-body">
        @*<input type="hidden" value="@WebSecurity.CurrentUserName" id="user" />*@
        <div class="row">

        </div>
        <hr class="ruler-lg" />

        <div class="card">
            <div class="card-body">
                <form class="form" role="form">
                    <span us-spinner="{radius:15, width:4, length: 8}"></span>
                    <div class="row">
                        <div class="col-md-7">
                            <div class="form-group  " ng-class="{'has-error':!bacSi.hoTen, 'has-success':bacSi.hoTen}">
                                <input type="text" class="form-control" id="hoTen" name="hoTen" ng-model="bacSi.hoTen" ng-change="GenAlias()">
                                <label for="hoTen">Họ tên *</label>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <input type="text" class="form-control" id="alias" ng-model="bacSi.alias" name="alias" readonly>
                                <label for="alias">Alias</label>
                            </div>
                        </div>
                    </div>
                </form>

                <div class="row">
                    <div class="card-head">
                        <ul class="nav nav-tabs" data-toggle="tabs">
                            <li class="active"><a href="#noidung">Nội dung</a></li>
                        </ul>
                    </div>
                    <div class="card-body tab-content">
                        <div class="tab-pane active" id="noidung">
                            <div class="row">
                                <div class="col-md-9">
                                    <form class="form" role="form">
                                        <div class="form-group ">
                                            <input name="diaChi" id="diaChi" class="form-control" placeholder="" ng-model="bacSi.diaChi"/>
                                            <label for="diaChi">Địa chỉ</label>
                                        </div>
                                        <div class="form-group ">
                                            <input name="ngaySinh" id="ngaySinh" @*type="date"*@ class="form-control" placeholder="" ng-model="bacSi.ngaySinh" />
                                            <label for="ngaySinh">Ngày sinh</label>
                                        </div>
                                        <div class="form-group ">
                                            <select id="gioiTinh" name="gioiTinh" class="form-control " ng-model="bacSi.gioiTinh" >
                                                <option value="2" ng-selected="bacSi.gioiTinh == 2">Nam</option>
                                                <option value="1" ng-selected="bacSi.gioiTinh == 1">Nữ</option>
                                                <option value="0" ng-selected="bacSi.gioiTinh == 0">Không xác định</option>
                                            </select>
                                            <label for="gioiTinh">Giới tính</label>
                                        </div>
                                        <div class="form-group ">
                                            <input name="chucVu" id="chucVu" class="form-control" placeholder="" ng-model="bacSi.chucVu" />
                                            <label for="chucVu">Chức vụ</label>
                                        </div>
                                        <div class="form-group ">
                                            <input name="congViec" id="congViec" class="form-control" placeholder="" ng-model="bacSi.congViec" />
                                            <label for="congViec">Công việc</label>
                                        </div>
                                        <div class="form-group ">
                                            <textarea name="thongTinKhac" id="thongTinKhac" class="form-control" rows="2" placeholder="" ng-model="bacSi.thongTinKhac"></textarea>
                                            <label for="thongTinKhac">Thong tin khác</label>
                                        </div>
                                    </form>
                                </div>

                                <div class="col-md-3">
                                    <form class="form" role="form">
                                        <div class="form-group ">
                                            <input name="sdt" id="sdt" class="form-control" placeholder="" ng-model="bacSi.sdt" />
                                            <label for="sdt">Số ĐT:</label>
                                        </div>
                                        <div class="form-group ">
                                            <input name="email" id="email" class="form-control" placeholder="" ng-model="bacSi.email" />
                                            <label for="email">Email</label>
                                        </div>
                                        <div class="form-group ">
                                            <input name="fb" id="fb" class="form-control" placeholder="" ng-model="bacSi.fb" />
                                            <label for="fb">Facebook</label>
                                        </div>
                                        <div class="form-group ">
                                            <input name="zalo" id="zalo" class="form-control" placeholder="" ng-model="bacSi.zalo" />
                                            <label for="zalo">Zalo</label>
                                        </div>
                                        <div class="form-group ">
                                            <select id="featured" name="featured" class="form-control" ng-model="bacSi.featured">
                                                <option value="1" ng-selected="bacSi.featured == 1">Có</option>
                                                <option value="0" ng-selected="bacSi.featured == 0">Không</option>
                                            </select>
                                            <label for="featured">Nổi bật</label>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <div class="input-group-content">
                                                    <input type="text" class="form-control" id="image" ng-model="bacSi.image">
                                                    <label for="image">Hình ảnh</label>
                                                </div>
                                                <div class="input-group-btn">
                                                    <button class="btn btn-default" ng-click="ChooseImageBacSi()" type="button">Chọn</button>
                                                </div>
                                            </div>
                                            <img class="img-responsive" src="{{bacSi.image}}" ng-show="bacSi.image" />
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>