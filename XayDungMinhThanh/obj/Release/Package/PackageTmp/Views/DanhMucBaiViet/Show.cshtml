@model XayDungMinhThanh.Models.CategoryPost
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="art-layout-cell art-content clearfix" ng-controller="categoryPostController">
    <input type="hidden" value="@Model.id" id="idCategory" />
    <article class="art-post art-messages" style="display: none;">
        <div class="art-postcontent clearfix">
            <div id="system-message-container">
            </div>
        </div>
    </article>
    <div class="blog">
        <div class="items-row cols-1 row-0">
            <p ng-hide="posts.length > 0" style="text-align:center; font-size:2em; color:#f44336">Đang cập nhật</p>
            <div class="col-md-12" ng-repeat="(index, value) in posts" ng-show="posts.length > 0" style="padding:0;">
                <article class="art-post">
                    <h2 class="art-postheader">{{value.title}}</h2>
                    <div class="art-postheadericons art-metadata-icons">
                        <span class="art-postdateicon">Được đăng ngày Thứ tư, 24 Tháng 5 2017 12:22</span>
                    </div>
                    <div class="art-postcontent clearfix">
                        <div class="art-article">
                            <div ng-bind-html="value.content"></div>
                            <div class="jcomments-links">
                                <a class="comments-link" href="/bai-viet/{{value.alias}}-{{value.id}}" title="Xem">Xem chi tiết</a>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
            <span class="row-separator"></span>
        </div>
    </div>


</div>
@Html.Partial("_Sidebar")