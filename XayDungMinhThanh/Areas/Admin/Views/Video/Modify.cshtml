
@{
    ViewBag.Title = "Thêm - sửa video";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div ng-controller="modifyVideoController">
    <!--Header Section-->
    <div class="section-header">
        <ol class="breadcrumb">
            <li class="active text-uppercase" style="width: 100%">
                <div class="col-md-4">
                    Thêm - Sửa video
                </div>
                <div class="col-md-8">
                    <div class="col-md-3">
                        <button type="button" class="btn btn-block btn-sm ink-reaction btn-success" ng-click="Save()"><span class="fa fa-edit"></span> Lưu</button>
                    </div>
                    <div class="col-md-3">
                        <button type="button" class="btn btn-block btn-sm ink-reaction btn-info" ng-click="SaveAndExit()"><span class="fa fa-check-square-o"></span> Lưu & Thoát</button>
                    </div>
                    <div class="col-md-3">
                        <button type="button" class="btn btn-block btn-sm ink-reaction btn-info" ng-click="SaveAndAdd()"><span class="fa fa-plus"></span> Lưu & Thêm mới</button>
                    </div>
                    <div class="col-md-3">
                        <button type="button" class="btn btn-block btn-sm ink-reaction btn-danger" ng-click="Cancel()"><span class="fa fa-remove"></span> Hủy bỏ</button>
                    </div>
                </div>
            </li>
        </ol>
    </div>

    <!--Body-->
    <div class="section-body">
        @*<input type="hidden" value="@WebSecurity.CurrentUserName" id="user" />*@
        <div class="row">

        </div>
        <hr class="ruler-lg" />

        <div class="card">
            <div class="card-body">
                <form class="form" role="form">
                    <span us-spinner="{radius:15, width:4, length: 8}"></span>
                    <div class="row">
                        <div class="col-md-7">
                            <div class="form-group  " ng-class="{'has-error':!video.title, 'has-success':video.title}">
                                <input type="text" class="form-control" id="title" name="title" ng-model="video.title" ng-change="GenAlias()">
                                <label for="title">Tiêu đề *</label>
                            </div>
                            <div class="form-group  " ng-class="{'has-error':!video.link, 'has-success':video.link}">
                                <input type="text" class="form-control" id="link" name="link" ng-model="video.link" ng-change="GetVideoNotID()">
                                <label for="link">Video *</label>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group ">
                                <textarea class="form-control" rows="3" placeholder="" ng-model="video.description"></textarea>
                                <label for="description">Mô tả</label>
                            </div>
                        </div>
                    </div>
                </form>

                <div class="row">
                    <br />
                    <!--Demo Video-->
                    <div class="col-md-12">
                        <div class="videoDemo">
                            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                                <div class="carousel-inner" role="listbox">
                                    <div class="item video-child active">
                                        <iframe ng-show="video.link1" src="{{video.link1}}" allowfullscreen></iframe>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>